{
  "typography": {
    "fontSize": "md",
    "customFontSizePx": 16,
    "lineHeight": "normal",
    "fontFamily": "open-sans",
    "fontWeight": "normal",
    "textColor": "#53e802",
    "userTextColor": "",
    "botTextColor": "#fffff0",
    "timestampColor": "#888888",
    "usernameColor": "#ffffff"
  },
  "layout": {
    "viewMode": "messages",
    "metaPosition": "above",
    "messageStyle": "flat",
    "bubblePadding": "compact",
    "bubbleBackgroundColor": "rgba(255, 255, 255, 0.04)",
    "bubbleBorderColor": "rgba(255, 255, 255, 0.10)",
    "bubbleBorderWidthPx": 1,
    "bubbleRadiusPx": 14,
    "bubbleMaxWidth": 100,
    "groupConsecutive": false,
    "groupGap": "tight",
    "messageGap": "normal",
    "showMessageDividers": false,
    "dividerMode": "messages",
    "dividerColor": "#ffffff",
    "dividerOpacity": 8,
    "dividerWidth": 100,
    "avatarGap": 12,
    "containerWidth": 60
  },
  "header": {
    "displayMode": "normal",
    "hoverTabText": "Settings",
    "hoverRevealZoneHeightPx": 50,
    "hoverTabFontSizePx": 15,
    "widthMode": "match-chat",
    "heightPx": 56,
    "paddingX": 12,
    "backgroundColor": "#09090b",
    "backgroundOpacity": 100,
    "backdropBlurPx": 0,
    "borderBottom": true,
    "borderColor": "#ffffff",
    "borderOpacity": 10,
    "borderWidthPx": 1,
    "roundedBottom": true,
    "radiusPx": 12,
    "showLogo": true,
    "logoUrl": "/logo.png",
    "logoHeightPx": 32,
    "logoMaxWidthPx": 160,
    "showTitle": false,
    "titleText": "TavernStudio",
    "titleColor": "#ffffff",
    "titleSizePx": 14,
    "settingsButtonVariant": "secondary"
  },
  "avatar": {
    "shape": "rounded",
    "roundness": 14,
    "size": "lg",
    "visibility": "first-in-group",
    "verticalAlign": "top",
    "fallback": "initials"
  },
  "actions": {
    "visibility": "hover",
    "position": "inline",
    "style": "icon",
    "size": "md",
    "showEdit": true,
    "showDelete": true,
    "showBranch": true,
    "showRegenerate": true,
    "showCopy": true
  },
  "branch": {
    "chevronSize": "lg"
  },
  "timestamp": {
    "format": "smart",
    "detail": "time-only",
    "position": "with-name"
  },
  "animation": {
    "enabled": true,
    "hoverTransition": "fade",
    "newMessageAnimation": "fade-in",
    "branchSwitchAnimation": "slide"
  },
  "edit": {
    "style": "inline",
    "buttonPosition": "below"
  },
  "markdown": {
    "codeBlockBackground": "rgba(0, 0, 0, 0.4)",
    "codeBlockTextColor": "#e0e0e0",
    "codeBlockBorderRadius": 6,
    "inlineCodeBackground": "rgba(0, 0, 0, 0.3)",
    "inlineCodeTextColor": "#f0f0f0",
    "blockquoteBorderColor": "rgba(255, 255, 255, 0.3)",
    "blockquoteBackground": "transparent",
    "blockquoteTextColor": "rgba(255, 255, 255, 0.7)",
    "headingColor": "",
    "headingWeight": "bold",
    "headingSize": "md",
    "boldColor": "",
    "italicColor": "",
    "italicStyle": true,
    "quoteColor": "#f0c674",
    "linkColor": "#6ba3ff",
    "linkUnderline": true
  },
  "pageBackground": {
    "type": "color",
    "color": "#242324",
    "imageUrl": "",
    "size": "cover",
    "position": "center",
    "repeat": "no-repeat",
    "opacity": 100
  },
  "messageListBackground": {
    "enabled": false,
    "type": "color",
    "color": "#dad7d7",
    "gradientFrom": "rgba(30, 30, 50, 0.9)",
    "gradientTo": "rgba(20, 20, 40, 0.7)",
    "gradientDirection": "to-bottom",
    "opacity": 10,
    "blur": 6
  },
  "speakerOverrides": {}
}
